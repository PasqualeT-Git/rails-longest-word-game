<h1 class="shadow">New Game</h1>

<ul id="words-game">
  <% @letters.each do |letter| %>
    <li class="shadow"><%= letter %></li>
  <% end %>
</ul>

<form id="play" method="POST" action="/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="user-word" placeholder="Give your best shot!" id="play-input">
  <input type="submit" value="Play!" id="play-btn">
</form>